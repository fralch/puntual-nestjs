generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Usuarios {
  id        Int      @id @default(autoincrement())
  dni       Int   @unique
  nombre    String
  cargo     String
  celular   Int
  correo    String
  direccion String
  horarios_laborales Horarios_laborales[]
  registro_asistencias Registro_asistencias[]
  tardanzas Tardanzas[]
  faltas Faltas[]
  permisos_vacasiones Permisos_vacasiones[]
}

model Horarios_laborales {
  id        Int      @id @default(autoincrement())
  entrada_manana String
  salida_manana  String
  entrada_tarde  String
  salida_tarde   String
  usuario_id     Int
  usuario        Usuarios @relation(fields: [usuario_id], references: [id])
}

model Registro_asistencias{
  id        Int      @id @default(autoincrement())
  fecha     String
  hora_entrada String
  hora_salida  String
  usuario_id     Int
  turno    String
  foto    String
  horas_trabajadas Int
  usuario        Usuarios @relation(fields: [usuario_id], references: [id])
}

model Tardanzas {
  id        Int      @id @default(autoincrement())
  fecha     DateTime
  turno   String
  minutos Int
  usuario_id     Int
  usuario        Usuarios @relation(fields: [usuario_id], references: [id])
}

model Faltas {
  id        Int      @id @default(autoincrement())
  fecha     DateTime
  turno   String
  usuario_id     Int
  usuario        Usuarios @relation(fields: [usuario_id], references: [id])
}

model Permisos_vacasiones {
  id        Int      @id @default(autoincrement())
  fecha_inicio     DateTime
  fecha_fin     DateTime
  motivo  String
  usuario_id     Int
  usuario        Usuarios @relation(fields: [usuario_id], references: [id])
}

